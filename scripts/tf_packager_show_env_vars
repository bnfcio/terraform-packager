  echo "  TF_PACKAGER_SCRIPTS_DIRECTORY.................: ${TF_PACKAGER_SCRIPTS_DIRECTORY}"
  echo "  TF_PACKAGER_TEMPLATES_DIRECTORY...............: ${TF_PACKAGER_TEMPLATES_DIRECTORY}"

  echo "  TF_PACKAGER_TEMPORARY_DIRECTORY...............: ${TF_PACKAGER_TEMPORARY_DIRECTORY}"
  echo "  TF_PACKAGER_TEMPORARY_BUILD_CONTEXT_DIRECTORY.: ${TF_PACKAGER_TEMPORARY_BUILD_CONTEXT_DIRECTORY}"
  echo "  TF_PACKAGER_ENVIRONMENT_VARIABLES_FILE_NAME...: ${TF_PACKAGER_ENVIRONMENT_VARIABLES_FILE_NAME}"
